From: Pawit Pornkitprasan <p.pawit@gmail.com>
Date: Wed, 11 Dec 2013 20:47:31 +0700
Subject: [PATCH] chromium: disable HW rendering
---
diff --git a/android_webview/browser/in_process_view_renderer.cc b/android_webview/browser/in_process_view_renderer.cc
index bcfa3b9..40c7056 100644
--- a/android_webview/browser/in_process_view_renderer.cc
+++ b/android_webview/browser/in_process_view_renderer.cc
@@ -128,8 +128,13 @@ class ScopedPixelAccess {
 };
 
 bool HardwareEnabled() {
+// HACK: sc6820i has problems with GL image upload which can lead to system crash
+#ifdef SPRD_HARDWARE
+  static bool g_hw_enabled = false;
+#else
   static bool g_hw_enabled = !CommandLine::ForCurrentProcess()->HasSwitch(
       switches::kDisableWebViewGLMode);
+#endif
   return g_hw_enabled;
 }
 
